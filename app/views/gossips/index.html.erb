<html>
<head>
  <title>The Gossip Project</title>
</head>
<body>

<div class="card-columns'">

<% @gossip.each_with_index do |gossip, index| %>
<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title">Author: <%= gossip.user.user_name%> </h5>
    <p class="card-text">Story: <%= gossip.content %> </p>
    <a class="card-link" <%= link_to "SHOW ME THE GOSSIP", gossip_path(gossip.id)%></a>
  </div>
</div>
</div>
<%  end %>

<footer class="py-5 bg-dark">
    <div class="container">
      <p class="m-0 text-center text-white">Copyright &copy; Gossip Incorporated 2019</p>
    </div>
    
  </footer>

</body>
</html>